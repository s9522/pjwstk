<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Książki", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                    @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Książki", "Index", "Books")</li>
                        <li>@Html.ActionLink("Autorzy", "Index", "Authors")</li>
                        <li>@Html.ActionLink("Czytelnicy", "Index", "Readers")</li>
                        <li>@Html.ActionLink("Wypożyczenia", "Index", "BookRentals")</li>
                        <li>@using (Html.BeginForm("LogOff", "Home", FormMethod.Post, new { id = "logOffForm" })){@Html.AntiForgeryToken()}<a href="javascript:$('#logOffForm').submit()">Wyloguj</a></li>
                    }</ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="jumbotron">
            <h1>Czytelnia</h1>
            <p class="lead">Prosta aplikacja do zarzadzania książkami i ich wypożyczeniami.</p>

        </div>
        <div class="row row-centered">
            <div class="col-md-10 col-centered">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Wykonał Sebastian Miodek, s9522 - PJATK</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
