@model IEnumerable<Pjatk.Pab.Books.Domain.Models.BookRental>

@{
    ViewBag.Title = "Wypożyczenia książek";
}

<h2>Lista wypożyczeń książek</h2>

<p>
    @Html.ActionLink("Dodaj nowe wypożyczenie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.Reader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTo)
        </th>
        <th>
            Liczba książek
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Reader.FirstName @item.Reader.LastName
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTo)
        </td>
        <td>
            @item.Books.Count()
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Szczegóły", "Details", new {id = item.Id}) |
            @Html.ActionLink("Usuń", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
