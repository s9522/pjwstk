@model Web.Models.LogOnViewModel

@{
    ViewBag.Title = "Zaloguj";
    ViewBag.ReturnUrl = Request["ReturnUrl"];
}

<h2>Logowanie</h2>



<div class="form-login">

    @using (Html.BeginForm(null, null, new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)<br />
        <div class="form-group">
            @Html.TextBoxFor(m => m.UserName, new {placeholder = Html.DisplayNameFor(m => m.UserName), @class = "form-control input-sm"})
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new {placeholder = Html.DisplayNameFor(m => m.Password), @class = "form-control input-sm"})
        </div>
    <div class="form-group">
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.DisplayNameFor(m => m.RememberMe)
    </div>

            <div class="wrapper">
            <span class="group-btn">
                <button type="submit" class="btn btn-default btn-md">Zaloguj</button>
            </span>
        </div>
    }
    </div>
